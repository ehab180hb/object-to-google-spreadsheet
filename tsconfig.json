{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017", "esnext"],
    "sourceMap": true,
    "outDir": "./dist",
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "pretty": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "declaration": true
  },
  "exclude": ["src/test"]
}
